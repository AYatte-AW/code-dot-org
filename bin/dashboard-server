#!/usr/bin/env ruby
require_relative '../deployment'

def main()
  Dir.chdir(dashboard_dir) do
    system 'bundle install' unless system 'bundle check'
    system "RAILS_ENV=#{CDO.rack_env} bundle exec rake db:migrate seed:all"
    system "RAILS_ENV=#{CDO.rack_env} bundle exec rails s -p #{CDO.dashboard_port}"
  end
end

main
