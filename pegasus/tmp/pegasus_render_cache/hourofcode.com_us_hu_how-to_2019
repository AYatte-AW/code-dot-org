      if(!$(e.target).closest('#hoc-nav-hamburger').length) {
        $('#hoc-nav ul').addClass('hide-responsive-menu');
      }
      if(!$(e.target).closest('#footer-toggle').length) {
        $('#footer-links ul').addClass('hide-responsive-footer-menu');
      }
    });
  });
</script>

</body>
</html>
