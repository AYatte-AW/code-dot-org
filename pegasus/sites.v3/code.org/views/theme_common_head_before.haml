  %meta{property:property, content:content}

%title= page_title_with_tagline

- font_src = '/fonts/gotham4r-critical.woff2'
:javascript
  // Load critical FontFace.
  var font = new FontFace(
    'Gotham Critical',
    'url(#{font_src})',
    {
      style: 'normal',
      weight: '400',
      unicodeRange: 'U+0030-0039,U+0041-005A,U+0061-007A' /* 0-9,A-Z,a-z */
    }
  );
  font.load();
  font.loaded.then(function(font) {
    document.fonts.add(font);
  });
- response.add_header 'Link', "<#{font_src}>; rel=preload; as=font; type=font/woff2; crossorigin;"

