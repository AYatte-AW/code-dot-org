- video = local_assigns[:video]
%html{:dir => locale_dir}
  %script{src: '/shared/js/video/build/video.js'}
  :css
    #video-container {
      width: 100%;
      height: 100%;
      overflow: hidden;
    }

    #video {
      border: 0;
    }

    body {
      background-color: #000;
      color: #fff;
      height: 100%;
      width: 100%;
      overflow: hidden;
      position: absolute;
      padding: 0;
    }

  #video-container
    %video{id: 'video', width: '100%', height: '100%', autoplay: params.has_key?(:autoplay), class: 'video-js vjs-default-skin vjs-big-play-centered', controls: true, preload: 'auto', poster: video.thumbnail_path}
      - unless params.has_key?(:youtube_only)
        %source{src: video.download, type: 'video/mp4'}
      - unless params.has_key?(:fallback_only)
        %source{src: video.youtube_url, type: 'video/youtube'}
